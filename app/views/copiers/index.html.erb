<div>
  <% if admin_logged_in? %>
    <p class="text-right">Add new copier <%= link_to "New Copier", new_copier_path %></p>
  <% else %>
    <p class="text-right">Request a copier be added <%= link_to "Here", new_request_path %></p>
  <% end %>
</div>

<%= render 'shared/search' %>
<table class="table table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th>Manufacturer</th>
      <th>Supports Papercut</th>
      <th>Supports Coinop</th>
      <th>Supports card reader</th>
    </tr>
  </thead>
  <tbody>
    <%= div_for @copier do |f| %>
    <tr data-link="<%= copier_path(f) %>">
      <td><%= f.name %></td>
      <td><%= f.manufacturer %></td>
      <td><%= f.papercut %></td>
      <td><%= f.coinop %></td>
      <td><%= f.card_reader %></td>
    </tr>
    <% end %>
  </tbody>
</table>

<% if flash[:notice] %>
  <div class="notice"><%= flash[:notice] %></div>
<% end %>




